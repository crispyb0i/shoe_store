<h1><%=@brand.name%></h1>
<% if @brand.price!=nil%>
  <h4>Price: $<%=@brand.price%></h4>
<% else %>
  <h4>This brand's price is currently unlisted</h4>
<% end %>
<form action="/brands/<%=@brand.id%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="store_name">update brand price</label>
  <input type="text" class="form-control" name="brand_price" value="<%= @brand.price %>">

  <button type="submit" class="btn btn-primary">Submit</button>
</form>



<h3>The following stores have the <%=@brand.name%> brand in stock:</h3>
  <ul>
    <% if @stores.any? %>
      <%@stores.each do |store|%>
        <li><a href="/stores/<%=store.id %>"><%=store.name%></li>

    <% end %>
  </ul>
    <% else %>
      <h4>There are currently no stores that carry this brand</h4>
    <% end %>
</ul>

<a href="/">Home</a>
